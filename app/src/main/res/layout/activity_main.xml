        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="we are almost done!\n
            One of the most important skills for beginner musician is the ability to distinguish by\
            ear between major and minor. \
            Major sounds fun and minor sounds sad. Let's practice!\nWhat do you hear?"
            android:textAlignment="center"
            android:textColor="#000000" />

        <!-- major sound -->

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <Button
                android:id="@+id/start_major"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="play_major"
                android:text="Play sound" />

            <Button
                android:id="@+id/pause_major"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="pause_major"
                android:text="Pause sound" />

            <Button
                android:id="@+id/stop_major"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="stop_major"
                android:text="Stop sound" />

        </LinearLayout>


        <RadioGroup
            android:id="@+id/majorRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

