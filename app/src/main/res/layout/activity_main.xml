            android:padding="16dp">

            <RadioButton
                android:id="@+id/treble_a__a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="treble_clef_a_quiz"
                android:text="A" />

            <RadioButton
                android:id="@+id/treble_a__h"
