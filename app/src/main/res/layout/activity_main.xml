            android:layout_height="100dp"
            android:src="@drawable/bass_g" />


        <RadioGroup
            android:id="@+id/Bass_Clef_g_RadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">


            <RadioButton
                android:id="@+id/bass_g__g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="bass_clef_g_quiz"
                android:text="G" />

            <RadioButton
                android:id="@+id/bass_g__e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="bass_clef_g_quiz"
                android:text="E" />

            <RadioButton
                android:id="@+id/bass_g__f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="bass_clef_g_quiz"
                android:text="F" />


            <RadioButton
                android:id="@+id/bass_g__a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="bass_clef_g_quiz"
                android:text="A" />

        </RadioGroup>

        <!-- bass d -->


        <ImageView
            android:id="@+id/bass_d"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/bass_d" />


        <RadioGroup
            android:id="@+id/Bass_Clef_d_RadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <RadioButton
                android:id="@+id/bass_d__c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="bass_clef_d_quiz"
                android:text="C" />

            <RadioButton
                android:id="@+id/bass_d__g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="bass_clef_d_quiz"
                android:text="G" />

            <RadioButton
                android:id="@+id/bass_d__a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="bass_clef_d_quiz"
                android:text="A" />


            <RadioButton
                android:id="@+id/bass_d__d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="bass_clef_d_quiz"
                android:text="D" />

        </RadioGroup>

        <!-- several notes -->

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Please, choose all correct answers."
            android:textAlignment="center"
            android:textColor="#000000" />

        <!-- bass_aceg -->

        <ImageView
            android:id="@+id/bass_aceg"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/bass_aceg" />

        <LinearLayout
            android:id="@+id/bass_aceg_r_btns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="16dp">

            <CheckBox
                android:id="@+id/bass_aceg_aceg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="aceg" />

            <CheckBox
                android:id="@+id/bass_aceg_face"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
