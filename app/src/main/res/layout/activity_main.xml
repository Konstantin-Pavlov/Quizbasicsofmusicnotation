            android:layout_height="100dp"
            android:src="@drawable/treble_clef" />


        <RadioGroup
            android:id="@+id/Treble_Clef_r_btns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <RadioButton
                android:id="@+id/Treble_Clef_treble_clef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="treble_clef_quiz"
                android:text="treble clef" />


            <RadioButton
                android:id="@+id/Treble_Clef_bass_clef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="treble_clef_quiz"
                android:text="bass clef" />
        </RadioGroup>


        <View
