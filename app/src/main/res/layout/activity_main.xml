                android:text="H" />

            <RadioButton
                android:id="@+id/treble_a__c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="treble_clef_a_quiz"
                android:text="C" />


            <RadioButton
                android:id="@+id/treble_a__f"
